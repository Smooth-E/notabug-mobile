<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style
        name="Widget.NotABugMobile.Button.UnelevatedButton.ExtraSmall"
        parent="Widget.Material3.Button.UnelevatedButton">
        <item name="cornerRadius">4dp</item>
    </style>

    <style
        name="Widget.NotABugMobile.Button.OutlinedButton.ExtraSmall"
        parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">4dp</item>
    </style>

    <style
        name="Widget.NotABugMobile.TextInputLayout.FilledBox.Full"
        parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="shapeAppearance">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <style name="Dialog.NotABugMobile.BottomSheetDialog" parent="Theme.NotABugMobile">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.NotABugMobile.BottomSheetDialog</item>
    </style>

    <style name="Animation.NotABugMobile.BottomSheetDialog" parent="Theme.NotABugMobile">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="ShapeAppearance.NotABugMobile.CornersLarge" parent="Theme.NotABugMobile">
        <item name="cornerSize">16dp</item>
    </style>

</resources>